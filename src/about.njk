{% stylesheet 'scss' %}

    $accent: #CC0000;
    @import "global";

    .grid.grid--about {  
        grid-template-rows: none;
        grid-auto-rows: minmax(min-content, max-content);
    }

    .box {
        a {
            color: $accent;
        }
        &.box--masthead {
            min-height: 450px;
            grid-area: 1/3/2/5;
            picture, img {
                object-position: top center;
            }
        }

        .fg {
            .placard {
                color: $accent;
            }
        }

        &.box--description {
            .fg {
                padding: 50px;
                justify-content: flex-start;
                align-items: flex-start;
            }
        }

        &.box--intro {
            grid-area: 1/1/2/3;
        }
        &.box--experience {
            grid-area: 2/1/3/3;
        }
        &.box--elsewhere {
            grid-area: 2/3/3/5;
            .fg {
                justify-content: flex-end;
            }
        }
    }
{% endstylesheet %}